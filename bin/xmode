#!/bin/bash

DISPLAYS=("" $(xrandr | grep connected | awk '{print $1}'))

for i in {1..9}; do
    if [ -z "${DISPLAYS[i]}" ]; then
        break
    fi
    echo [$i] ${DISPLAYS[i]}
    xrandr --output ${DISPLAYS[i]} --auto
done

if [ "$1" = "-a" ]; then
    exit
fi

if [ "$1" != "-c" ]; then
    exit
fi

echo -n "choose output: "
read
OUTPUT=${DISPLAYS[REPLY]}

echo -n "set width: "
read
WIDTH=$REPLY

echo "Proper height: $((WIDTH*9/16))(16:9) $((WIDTH*10/16))(16:10) $((WIDTH*3/4))(4:3)"
echo -n "set height: "
read
if [ -z "$REPLY" ]; then
    HEIGHT=$((WIDTH*9/16))
else
    HEIGHT=$REPLY
fi

echo -n "set refresh: "
read
REFRESH=$REPLY

MODE=${WIDTH}x${HEIGHT}x${REFRESH}
MODELINE=$(cvt $WIDTH $HEIGHT $REFRESH | tail -1 | cut -d " " -f 3-)

set -x
xrandr --newmode $MODE $MODELINE
xrandr --addmode $OUTPUT $MODE
xrandr --output $OUTPUT --mode $MODE --primary

set +x
xinput --list | grep pointer

echo -n "choose pointer: "
read
POINTER=$REPLY

echo -n "slow down pointer: "
read
SPEED=$REPLY

set -x
xinput set-prop $POINTER "libinput Accel Speed" -0.$SPEED
