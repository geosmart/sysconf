#!/bin/bash

if [[ "$1" = "-i" ]]; then
    set -x
    setxkbmap -layout us
    xmodmap -e "keycode 9 = Escape asciitilde grave"
    xinput set-prop 'pointer:Razer Razer DeathAdder' 'libinput Accel Profile Enabled'  0, 1
    xinput set-prop 'pointer:Razer Razer DeathAdder' 'libinput Accel Speed' -0.${2:-4}
    xinput set-prop 'pointer:Razer Razer DeathAdder V2' 'libinput Accel Profile Enabled'  0, 1
    xinput set-prop 'pointer:Razer Razer DeathAdder V2' 'libinput Accel Speed' -0.${2:-01}
    exit
fi

if [[ "$1" = "-s" ]]; then
    set -x
    xrandr | grep -w connected | cut -d ' ' -f1 | xargs -I{} xrandr --output {} --scale ${2:-1}x${2:-1}
    exit
fi

if [[ "$1" = "-b" ]]; then
    set -ex
    xset -b
    xset -dpms
    xset s noblank
    xset s off

    # start session
    nohup cinnamon-session &>>/tmp/cinnamon-session.log &

    # reload awesome
    until [ -n "$(pgrep -f cinnamon-session)" ]; do
        sleep 1
    done
    awesome-client 'awesome.restart()' || echo
    sleep 1

    # background
    hsetroot -full /usr/share/awesome/themes/default/background.png

    # fcitx
    fcitx -rd && im-config -n fcitx
    exit
fi

DISPLAYS=("" $(xrandr | grep connected | awk '{print $1}'))

for i in {1..9}; do
    if [ -z "${DISPLAYS[i]}" ]; then
        break
    fi
    echo [$i] ${DISPLAYS[i]}
    if [ "$1" = "-a" ]; then
        xrandr --output ${DISPLAYS[i]} --auto
        xrandr --newmode 1920x1200x60 193.25 1920 2056 2256 2592 1200 1203 1209 1245 -hsync +vsync
        xrandr --newmode 3840x2160x26 290.25 3840 4064 4464 5088 2160 2163 2168 2195 -hsync +vsync
        xrandr --addmode ${DISPLAYS[i]} 1920x1200x60
        xrandr --addmode ${DISPLAYS[i]} 3840x2160x26
    fi
done

if [ "$1" != "-c" ]; then
    exit
fi

echo -n "choose output: "
read
OUTPUT=${DISPLAYS[REPLY]}

echo -n "set width: "
read
WIDTH=$REPLY

echo "Proper height: $((WIDTH*9/16))(16:9) $((WIDTH*10/16))(16:10) $((WIDTH*3/4))(4:3)"
echo -n "set height: "
read
if [ -z "$REPLY" ]; then
    HEIGHT=$((WIDTH*9/16))
else
    HEIGHT=$REPLY
fi

echo -n "set refresh: "
read
REFRESH=$REPLY

MODE=${WIDTH}x${HEIGHT}x${REFRESH}
MODELINE=$(cvt $WIDTH $HEIGHT $REFRESH | tail -1 | cut -d " " -f 3-)

set -x
xrandr --newmode $MODE $MODELINE
xrandr --addmode $OUTPUT $MODE
xrandr --output $OUTPUT --mode $MODE --primary
