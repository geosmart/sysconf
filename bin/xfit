#!/bin/bash

set -ex

xset -b
xset -dpms
xset s noblank
xset s off

# background
hsetroot -full /usr/share/awesome/themes/default/background.png &

# fcitx
fcitx -rd && im-config -n fcitx

# plasma session
plasma_session &>/dev/null &

# reload awesome
until [ -n "$(pgrep kdeinit5)" ]; do
    sleep 1
done
sleep 1
awesome-client 'awesome.restart()' || echo

# kill plasma shell
for _ in {1..5}; do
    pkill plasmashell && exit
    sleep 2
done
