#!/bin/bash

set -ex

xset -b
xset -dpms
xset s noblank
xset s off

# background
hsetroot -full /usr/share/awesome/themes/default/background.png &

# fcitx
fcitx -rd && im-config -n fcitx

# xfce
pkill xfce4-session || echo
xfce4-session &>/dev/null &

# reload awesome
until [ -n "$(pgrep xfce4-session)" ]; do
    sleep 1
done
sleep 1
awesome-client 'awesome.restart()' || echo

# kill xfce panel
for _ in {1..5}; do
    pkill xfce4-panel
    sleep 2
done
